@model Financial_Portal.Models.Transaction

<h3>Delete Transaction <span id="partialHeading">You will be prompted before actually deleting</span></h3>
<hr />

<div class="row">
    <dl class="dl-horizontal">
        <div class="col-lg-6">
            <dt>
                Category Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Cat.CName)
            </dd>
            <dt>
                Account Name
            </dt>
            <dd>
                @Html.DisplayFor(model => model.HAccount.HAName)
            </dd>
            <dt>
                Created Date
            </dt>
            <dd>
                @Model.Created.ToString("MM/dd/yyyy")
            </dd>
            <dt>
                Description
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Descript)
            </dd>
        </div>
        <div class="col-lg-6">
            <dt>
                Reconciled?
            </dt>
            <dd id="reconciled">
                @if (Model.Reconcile == true)
                {
                    @Html.DisplayFor(model => model.Reconcile);
                    @Html.Label(" - Yes")
                }
                else {
                    @Html.DisplayFor(model => model.Reconcile);
                    @Html.Label(" - No")
                }
            </dd>
            <dt>
                Trx Type
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Type)
            </dd>
            <dt>
                Amount
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Amount)
            </dd>
        </div>
    </dl>
</div>
<div class="row">
    <div class="col-lg-12 centered">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color centered">
                <input type="submit" value="Delete" class="btn btn-primary" /> |
                @Html.ActionLink("Close", "Details", "HouseAccounts", new { id = Model.HAccountId }, new { @class = "btn btn-primary" })
            </div>
        }
    </div>
</div>