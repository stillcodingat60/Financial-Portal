@model Financial_Portal.Models.Transaction

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Transaction</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Category Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cat.CName)
        </dd>
        <dt>
            Account Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.HAccount.HAName)
        </dd>
        <dt>
            Created Date
        </dt>
        <dd>
            @Model.Created.ToString("MM/dd/yyyy")
        </dd>
        <dt>
            Description
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Descript)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Reconcile)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Reconcile)
        </dd>
        <dt>
            Trx Type
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>
        <dt>
            Amount
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" /> |
            @Html.ActionLink("Close", "Details", "HouseAccounts", new { id = Model.HAccountId }, new { @class = "btn btn-primary" })
        </div>
    }
</div>
