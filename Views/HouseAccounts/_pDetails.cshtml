@model IEnumerable< Financial_Portal.Models.Transaction>


<p>
    @Html.ActionLink("Create New", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table stripe cell-border compact" id="myTable">
    <thead>
        <tr>
            <th class="centered">
                Category
            </th>
            <th class="centered">
                Account
            </th>
            <th class="centered">
                Date
            </th>
            <th class="centered">
                Description
            </th>
            <th class="centered">
                Reconcile
            </th>
            <th class="centered">
                Type
            </th>
            <th class="centered">
                Amount
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr>
                <td class="centered">
                    @Html.DisplayFor(modelItem => item.Cat.CName)
                </td>
                <td class="centered">
                    @Html.DisplayFor(modelItem => item.HAccount.HAName)
                </td>
                <td class="centered">
                    @item.Created.ToString("MM/dd/yyyy")
                </td>
                <td class="centered">
                    @Html.DisplayFor(modelItem => item.Descript)
                </td>
                <td class="centered">
                    @Html.DisplayFor(modelItem => item.Reconcile)
                </td>
                <td class="centered">
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td class="centered">
                    @if (item.Type == "expense" && item.Amount > 0)
                    {
                        <p class="red">@item.Amount</p>
                    }
                    else
                    {
                        <p>@item.Amount</p>
                    }
                </td>
                <td class="centered">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
                <td class="centered">
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
                <td class="centered">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}
