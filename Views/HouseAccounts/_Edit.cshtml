@model Financial_Portal.Models.HouseAccount

<h3>Edit</h3>

@using (Html.BeginForm("Edit", "HouseAccounts"))
{
    @Html.AntiForgeryToken()

        <h4>HouseAccount</h4>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Balance)
    @Html.HiddenFor(model => model.HhId)

        <div class="row">
            
            <div class="form-group centered">
                <div class="col-lg-4">
                    Account Name
                </div>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.HAName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.HAName, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-2">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    @Html.ActionLink("Close", "Index", "HouseAccounts", Model.Id, new { @class = "btn btn-primary" })
                </div>
            </div>
       </div>
       <hr />
}

