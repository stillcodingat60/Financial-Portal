@model IEnumerable<Financial_Portal.Models.HouseAccount>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="body-content">
    <h3>HouseHold Accounts</h3>

    <p>
        @Html.ActionLink("Create New Account", "Create", null, new {@class = "btn btn-primary"})
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HAName)
            </th>
            <th>
                Balance
            </th>
            <th>
                Reconciled
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HAName)
                </td>
                <td>
                    0
                </td>
                <td>
                    0
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) | 
                    @Html.ActionLink("Enter Transactions", "Index", "Transactions", new { HAccount = item.Id }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
</div>