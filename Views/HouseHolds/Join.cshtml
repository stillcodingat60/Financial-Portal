@model Financial_Portal.Models.HouseHold
<br/><br /><br /><br />
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron centered">
    <h3>This Create or Join a Household Page</h3>
    <p class="lead">You have arrived here because you are registered to the app but are not yet part of a household. If you have recieved an invitation to Join a house, please enter your invite code below and press "Join". If you would like to start a new household, please click "Create Household" below.</p>    
</div>


@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-3 centered">
            <h4>Join HouseHold</h4>
            <h3>@ViewBag.errorMessage</h3>
            <form id="contact-form" action="@Url.Action("Join","HouseHolds")" method="post">

                @Html.AntiForgeryToken()
                <div>
                    <label>Enter Invite Code</label>
                    <input type="text" class="form-control" name="Code" />
                    
                </div>
                <div>
                    <br />
                    <button class="btn btn-sm btn-primary">Join</button>
                </div>
            </form>
        </div>
        <div class="col-lg-2 centered">
            OR
        </div>
        <div class="col-lg-3 centered">
            <br /><br /><br /><br />
            <p>To start a new Household, click this button: <button class="btn btn-primary">@Html.ActionLink("Create HouseHold", "Create", "HouseHolds", new { @class = "btn btn-primary" })</button></p>
        </div>
        <div class="col-lg-2"></div>
    </div>
}


