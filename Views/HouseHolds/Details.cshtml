@model Financial_Portal.Models.HouseHold

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>


@Html.DisplayNameFor(model => model.HName)
@Html.DisplayNameFor(model => model.Id)
@Html.DisplayFor(model => model.HName)
@Html.DisplayFor(model => model.Id)

<table class="table">
    <div class="row">
        <div class="col-lg-10">

            @foreach (var item in Model.Users)
            {
             <tr>
                <th>
                    @Html.DisplayNameFor(model => item.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => item.LastName)
                </th>
                <th></th>
                 <th>
                     @Html.DisplayFor(model => item.FirstName)
                 </th>
                 <th>
                     @Html.DisplayFor(model => item.LastName)
                 </th>
            </tr>
            
            }
    </table>
    <form id="contact-form" action="@Url.Action("Invite","HouseHolds")" method="post" novalidate>

        <row>
            @Html.AntiForgeryToken()
            <div class="col-lg-12 centered border-head">
                <h2>Invite someone to join your Household</h2>
            </div>
        </row>
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-3">
                <label for="name">First &Aacute; Last Name</label>
                <input type="text" class="form-control" name="FName" placeholder="Their first & last name" />

                <label for="email">Email</label>
                <input type="email" class="form-control" name="Email" placeholder="Their email" />
                <input type="hidden" name="HhId" value=@Html.DisplayFor(model => model.Id)>
            </div>

            <div class="col-lg-3 centered">
                <br /> <br /><br />
                <label>The message will be automatically generated for you.</label>
                <br /> <br />
                <button>
                    Send Invitation
                </button>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </form>