@model Financial_Portal.Models.Budget

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Budget</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Category Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cat.CName)
        </dd>

        <dt>
            Budget Type
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            Budget Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BName)
        </dd>

        <dt>
            Budget Frequency
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Frequency)
        </dd>
