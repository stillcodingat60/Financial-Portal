@model Financial_Portal.Models.Budget

<h3 class="centered">Edit</h3>

@using (Html.BeginForm("Edit", "Budgets"))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4 class="centered">Budget</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.HhId)

        <div class="form-group">
            <div class="col-lg-4">
                Type
            </div>
            <div class="col-md-6">
                @Html.DropDownList("Type", ViewBag.Grype as SelectList, "select", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-4">
                Budget Name
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.BName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-4">
                Category ID
            </div>
            <div class="col-md-6">
                @Html.DropDownList("CatId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CatId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-4">
                Budget Amount
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.BAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BAmount, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-4">
                Budget Frequency
            </div>
            <div class="col-md-6">
                @Html.EditorFor(model => model.Frequency, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Frequency, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5">
                <input type="submit" value="Save" class="btn btn-default" /> |
                @Html.ActionLink("Close", "Index", "Categories", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}
