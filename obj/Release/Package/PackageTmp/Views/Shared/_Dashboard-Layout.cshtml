<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MyFinancial Portal</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" />
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/font-awesome.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
  
</head>
<body>
    <!--header start-->

    <header class="header black-bg">
        <div class="sidebar-toggle-box">
            <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
        </div>
        <!--logo start-->
        <a href="index.html" class="logo"><b>FINANCIAL PORTAL</b></a>
        <!--logo end-->
        <div class="nav notify-row" id="top_menu">
            <!--  notification start -->
            <ul class="nav top-menu">
                <!-- settings start -->

                <!-- inbox dropdown end -->
            </ul>
            <!--  notification end -->
        </div>
        <div class="top-menu">
            <ul class="nav pull-right top-menu">
                <li>@Html.Partial("_LoginPartial")</li>
            </ul>
        </div>
    </header>
    <!--header end-->

    <!--sidebar start-->
    <aside>
        <div id="sidebar" class="nav-collapse ">
            <!-- sidebar menu start-->
            <ul class="sidebar-menu" id="nav-accordion">

                <p class="centered"><img src="~/Content/img/ui-sam.jpg" class="img-circle" width="60"></p>
                <h5 class="centered">Menu</h5>

                <li class="mt">
                    <a href=@Url.Action("Index", "Home")>
                        <i class="fa fa-dashboard"></i>
                            <span>Home</span>
                    </a>
                </li>

                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class="fa fa-desktop"></i>
                        <span>About</span>
                    </a>
                    <ul class="sub">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </li>

                <li>
                    <a href=@Url.Action("Index", "HouseHolds")>
                        <i class="fa fa-cogs"></i>
                        <span>Financial Dashboard</span>
                    </a>
                </li>

                <li class="sub-menu">
                    <a href=@Url.Action("Details","Households")>
                        <i class=" fa fa-bar-chart-o"></i>
                        <span>Manage Household</span>
                    </a>
                </li>

                <li class="sub-menu">
                    <a href=@Url.Action("Index", "HouseAccounts")>
                        <i class="fa fa-book"></i>
                        <span>Manage Accounts</span>
                    </a>
                </li>

                <li class="sub-menu">
                    <a href=@Url.Action("Index", "Categories")>
                        <i class="fa fa-tasks"></i>
                        <span>Categories</span>
                    </a>
                </li>

                <li class="sub-menu">
                    <a href=@Url.Action("Index", "Budgets")>
                        <i class="fa fa-th"></i>
                        <span>Budgets</span>
                    </a>
                </li>

                <li class="sub-menu">
                    <a href="javascript:;">
                        <i class=" fa fa-bar-chart-o"></i>
                        <span>Charts</span>
                    </a>
                    <ul class="sub">
                        <li><a href="morris.html">Morris</a></li>
                        <li><a href="chartjs.html">Chartjs</a></li>
                    </ul>
                </li>

            </ul>
            <!-- sidebar menu end-->
        </div>
    </aside>
    <!--sidebar end-->

    @Html.Partial("_LoginPartial")

    <div class="container-fluid " id="body-content">
        @RenderBody()
        
        <br /><br />

        <div class="footer col-lg-12 centered">
                <p>&copy; @DateTime.Now.Year - Jamie McConnell</p>
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script type="text/javascript" language="javascript" src="https://cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
