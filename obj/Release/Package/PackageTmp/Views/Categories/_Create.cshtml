@model Financial_Portal.Models.Category

<h2 class="centered">Create</h2>

@using (Html.BeginForm("Create", "Categories"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="col-md-10">
            @Html.Hidden("HhId")
            @Html.ValidationMessageFor(model => model.HhId, "", new { @class = "text-danger" })
        </div>
        
        <h4 class="centered">New Category</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-offset-2 col-md-2">  Category Name</div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.CName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CName, "", new { @class = "text-danger" })            
        </div>
    </div>

    <div class="col-md-offset-2 col-md-2">  Account Type</div>
    <div class="col-md-8">
        @Html.DropDownList("Type", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" /> |
            @Html.ActionLink("Close", "Index", "Categories", null, new { @class = "btn btn-primary" })
        </div>
    </div>

}
