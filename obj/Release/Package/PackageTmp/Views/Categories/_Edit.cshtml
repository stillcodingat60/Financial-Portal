@model Financial_Portal.Models.Category
<hr />

<h3 class="centered">Edit</h3>

@using (Html.BeginForm("Edit", "Categories"))
{
    @Html.AntiForgeryToken()

    <h4 class="centered">Category</h4>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)

    <div class="row">
        <div class="form-group centered">
            <div class="col-lg-4">
                Category Name
            </div>
            <div class="col-lg-8">
                @Html.EditorFor(model => model.CName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
        <div class="row">
            <div class="form-group centered">
                <div class="col-lg-4">
                    Category Type
                </div>
                <div class="col-lg-8">
                    @Html.DropDownList("Type", ViewBag.Grype as SelectList, "select", htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                </div>
                <br />
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                @Html.Hidden("HhId")
                @Html.ValidationMessageFor(model => model.HhId, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-6 col-md-6">
                    <input type="submit" value="Save" class="btn btn-default" /> |
                    @Html.ActionLink("Close", "Index", "Categories", null, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>

}
