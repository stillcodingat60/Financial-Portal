@model Financial_Portal.Models.HouseAccount

<h3>Create New Account</h3>

@using (Html.BeginForm("Create", "HouseAccounts"))
{
    @Html.AntiForgeryToken()

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group ">
        <div class="col-md-10">
            @Html.Hidden("HhId")
            @Html.ValidationMessageFor(model => model.HhId, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-offset-2 col-md-2">  Account Name</div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.HAName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HAName, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-offset-2 col-md-2">Beginning Balance</div>
        <div class="col-md-8">
            @Html.EditorFor(model => model.Balance, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.HhId, "", new { @class = "text-danger" })
        </div>

        <div class="col-md-offset-2 col-md-10">
            <br />
            <input type="submit" value="Create" class="btn btn-primary" /> |
            @Html.ActionLink("Close", "Index", "HouseAccounts", null, new { @class = "btn btn-primary" })
        </div>
    </div>
}